<body style="background-color: powderblue">
<div class="container">

  <h2>Product Parts</h2>
  <div align="left">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" >
      Add Parts to Product
    </button>
  </div>
  <div align="right">
    <%= link_to 'Go To Sellers Page', sellers_path  %>
  </div>
  <center>
    <br>
    <table width="60%"  border="1%" style="background-color: #EFEFEF" id="item_Lists" autofocus="true">
      <thead>
      <th class="text-center">Name:</th>
      <th class="text-center">Description</th>
      <th class="text-center"> Action </th>

      </thead>
      <body>
      <% @items.each do |p| %>
        <tr align="center">

          <td><%= p.name %> </td>
          <td><%= p.desc %></td>
          <td><%= link_to 'Delete',delete_items_path(id: p.id, product_id: @products.id), method: :delete, data: {confirm: 'Are you sure?' } %>
            <%= link_to 'Edit', edit_item_path(p) %>
          </td>
        </tr>
      <% end %>
      </body>
    </table>
  </center>

  <div align="right" aria-setsize="20">
 </div>
</div>
</body>



<div class="modal fade" style="background-color: powderblue" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLabel">Add Parts To Product</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for @products.items.new, url: items_path, :html => {id: 'newItemForm'}  do |f| %>

              <center>
                  <label><h4> Part Name </h4></label>
                  <div><span class="require">*</span>
                    <%= f.text_field :name %></div>
                  <br>
                  <label><h4> Add Part Description </h4></label>
                  <div><span class="reqiure">*</span>
                    <%= f.text_field :desc %></div>
                  <br>
              </center></h>
          <%= f.hidden_field :product_id %>
          <center>
            <%= f.submit "Save", class: "btn btn-primary" %>
          </center>
          </div>
        <% end %>
        </div>
  </div>
</div>